<%# ITEM INDEX --- ITEM LIST %>
<%# YOU CAN USE INSTANCE VARIABLES/METHODS DOWNBELOW
    @items
    .id
    .name
    .genre_id
    .status
    .caption
    .price
    .image_id
%>
<div class="container">
  <%# NOTICE %>
  <div class="row">
    <p id="notice"></p>
  </div>
  <%# CONTENT %>
  <div class="row">
    <%# ITEM FILTER %>
    <div class="col-md-2">
      <div class="item-filter-list-group" style="max-width: 400px;">
        <div class="list-group-item list-group-item-action">ジャンル検索</div>
        <a href="#" class="list-group-item list-group-item-action">すべて</a>
        <a href="#" class="list-group-item list-group-item-action">ケーキ</a>
        <a href="#" class="list-group-item list-group-item-action">焼き菓子</a>
        <a href="#" class="list-group-item list-group-item-action">プリン</a>
        <a href="#" class="list-group-item list-group-item-action">キャンディ</a>
        <a href="#" class="list-group-item list-group-item-action disabled" tabindex="-1" aria-disabled="true">無効</a>
      </div>
    </div>
    <%# FILTERED LIST %>
    <div class="col-md-10">
      <div class="filtered-titles row">
        <p>
          <span class="filtered-title-text">ケーキ</span>
          <span class="filtered-number-of-hits">全 <%= @items.count %> 件</span>
        </p>
      </div>
      <%# FILTERED ITEMS %>
      <div class="filtered col-md-12">
        <%# ITEM EACH %>
        <% @items.each do |item| %>
          <%= link_to item_path(item) do %>
            <div class="item col-md-3">
              <div class="item-image col-md-12">
                <%= attachment_image_tag item, :image, :fill, 180, 100, format: 'jpeg', class: "item-img" %>
              </div>
              <div class="item-info col-md-12">
                <p class="item-name"><%= item.name %></p>
              <% end %>
              <p class="item-price">¥ <%= item.price %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>
