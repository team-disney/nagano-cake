<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <table>
    <tr>
      <td>
        <%# 姓 %>
        <div class="field">
        <%= f.label :氏名 %><br />
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
        </div>
      </td>
      <br><br>
      <td>
        <%# 名 %>
        <div class="field">
        <%# ：の後ろに空白を入れないとエラーになる %>
        <%= f.label :　 %><br />
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <%# 姓カナ %>
        <div class="field">
        <%# ：の後ろに空白を入れないとエラーになる %>
        <%= f.label :カナ %><br />
        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
        </div>
      </td>
      <br><br>
      <td>
        <%# 姓カナ %>
        <div class="field">
        <%= f.label :　 %><br />
        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
        </div>
      </td>
    </tr>
  </table>

  <div class="field">
    <%= f.label :郵便番号 %><br />
    <%= f.text_field :zipcode, autofocus: true, autocomplete: "zipcode" %>
  </div>
  <div class="field">
    <%= f.label :住所 %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>
  <div class="field">
    <%= f.label :電話番号 %><br />
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
  </div>


  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード【再入力】 %><br />
    <%# ここを カラム名の encrypted_password に変更したため invalid hash のエラーが出た。デフォルトの password_confirmation に変更したら解決。 %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "end_users/shared/links" %>
