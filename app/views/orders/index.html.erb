<%# HEADER %>
<div class="row">
    <p id="notice"></p>
	</div>
<%# CONTENT %>
	<div class="row">
    <h2>注文履歴一覧</h2>
	</div>
	<div class="row">
	<table class="table table-bordered table-hover table-striped">
        <thead>
        <tr>
        <th>注文日</th>
		<th>配送先</th>
		<th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
        </tr>
    </thead>
    <tbody>
    <% @orders.each do |order| %>
        <tr>
		<td><%= order.created_at %></td>
        <td><%= order.zipcode %><p><%= order.address %><p><%= order.name %></td>
        <td>
            <% order.order_details.each do |order_detail, i| %>

                <%= order_detail.item_name %>

                <% if i != (order.order_details.length - 1) %>
                    <br/>
                <% end %>

            <% end %>
        </td>
        <td><%= order.payment_price %></td>
		<td><%= order.status %></td>
        <th><%= link_to "表示する", order_path(order) %></th>
        </tr>
	<% end %>
    </tbody>
    </table>
</div>