
<div class="row">
    <p id="notice"></p>
	</div>

	<div class="row">
    <h2>注文一覧画面</h2>
	</div>
	<div class="row">
	<table class="table table-bordered table-hover table-striped">
        <thead>
        <tr>
        <th>購入日時</th>
		<th>購入者</th>
		<th>注文個数</th>
        <th>注文ステータス</th>
        </tr>
    </thead>
    <tbody>
    <% @orders.each do |order| %>
        <tr>
		<td><%= link_to order.created_at, admin_order_path(order) %></td>
		<td><%= order.name %></td>
        <% order.order_details.each do |order_detail, i| %>
		<td><%= order_detail.amount %></td>
        <% end %>
		<td><% order.status %></td>
        </tr>
	<% end %>
    </tbody>
    </table>
</div>