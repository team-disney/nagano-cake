<%# headerが入る %>

<%# 新規登録完了メッセージ %>
<p id = "notice"><%= notice %></p>

<%# name空欄のエラーメッセージ %>
<% if @genre.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @genre.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h1>ジャンル追加・一覧画面</h1>

<%= form_for @genre, url: admin_genres_path do |f| %>
  <span class="genre_name">ジャンル</span>
  <%= f.text_field :name %>
  <%= f.radio_button :status, :有効 %>
  <%= f.label "有効" %>
  <%= f.radio_button :status, :無効 %>
  <%= f.label "無効" %>
  <%= f.submit "追加", class: "btn btn-primary" %>
<% end %>


  <table>
    <thead>
    <tr>
    <th>ジャンル</th>
    <th>状態</th>
    <th></th>
    </tr>
    </thead>
    <% @genres.each do |genre| %>
      <tr>
      <td><%= genre.name %></td>
      <td><%= genre.status %></td>
      <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </table>
  

<%# footerが入る %>