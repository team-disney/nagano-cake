<h1>ジャンル追加・一覧画面</h1>

  <%= form_for(@genre) do |f| %>
    <label for="genre_name">ジャンル</label><br>
    <%= f.text_field :name, class: "col-xs-12" %>
    <%= f.radio_button :genres_status, :invalid, label: "無効" %>
    <%= f.radio_button :genres_status, :valid, label: "有効" %>
    <%= f.submit "追加", class: "col-xs-12 btn btn-primary"%>
  <% end %>