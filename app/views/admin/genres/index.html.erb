<%# headerが入る %>

<h1>ジャンル追加・一覧画面</h1>

<%= form_for @genre, url: admin_genres_path do |f| %>
  <span class="genre_name">ジャンル</span>
  <%= f.text_field :name %>
  <%= f.radio_button :status, :invalid %>
  <%= f.label :"無効" %>
  <%= f.radio_button :status, :valid %>
  <%= f.submit "追加", class: "btn btn-primary" %>
<% end %>

<% @genres.each do |genre| %>
      <%= genre.name %>
      <%= genre.status %>
      <%= link_to edit_admin_genre_path do %>
        <%= f.submit "編集する", class: "btn btn-primary" %>
      <% end %>
<% end %>

