<h3>会員情報画面</h3>
<%= form_for(@end_user, url: admin_end_user_path) do |f| %>
    <table>
        <tr>
            <td>会員ID</td>
            <td>
                <%= @end_user.id %>
            </td>
        </tr>
        <tr>
            <td>氏名</td>
            <td>
                <%= f.text_field :first_name %>
                <%= f.text_field :last_name %>
            </td>
        </tr>
        <tr>
            <td>フリガナ</td>
            <td>
                <%= f.text_field :first_name_kana %>
                <%= f.text_field :last_name_kana %>
            </td>
        </tr>
        <tr>
            <td>郵便番号</td>
            <td>
                <%= f.text_field :zipcode %>
            </td>
        </tr>
        <tr>
            <td>住所</td>
            <td>
                <%= f.text_field :address %>
            </td>
        </tr>
        <tr>
            <td>電話番号</td>
            <td>
                <%= f.text_field :phone_number %>
            </td>
        </tr>
        <tr>
            <td>メールアドレス</td>
            <td>
                <%= f.text_field :email %>
            </td>
        </tr>
        <tr>
            <td>会員ステータス</td>
            <td>
                <%= f.radio_button :deleted_at, 0 %>
                <%= f.label "有効" %>
                <%= f.radio_button :deleted_at, 1 %>
                <%= f.label "退会済み" %>
            </td>
        </tr>
    </table>
    <br>
    <%# 保存したらマイページに戻る %>
    <%= f.submit '変更を保存する',class: "btn btn-primary" %>
<% end %>
