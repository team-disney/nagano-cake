<%# ADMIN ITEM INDEX --- ALL ITEM LIST %>
<%# YOU CAN USE INSTANCE VARIABLES/METHODS DOWNBELOW
    @items
    .id
    .name
    .genre_id
    .status
    .caption
    .price
    .image_id
%>
<%# CONTENT %>
<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <h1>商品一覧画面 (管理者モード)</h1>
  </div>
</div>

<br>
<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <%= link_to "新しい商品を登録する", new_admin_item_path, class:'btn btn-primary' %>
  </div>
</div>

<br>
<%# ALL ITEM LIST %>
<div class="row">
<div class="col-sm-8 col-sm-offset-2">
  <table class="table table-bordered table-hover table-striped">
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, admin_item_path(item) %></td>
          <td><%= item.price %></td>
          <td><%= item.genre.name %></td>
          <td><%= item.status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>
