<%# ADMIN ITEM SHOW --- ITEM DETAILS %>
<%# YOU CAN USE INSTANCE VARIABLES/METHODS DOWNBELOW
    @item
    .id
    .name
    .genre_id
    .status
    .caption
    .price
    .image_id
%>
<div class="container">
  <%# NOTICE %>
  <p id="notice"></p>
  <%# CONTENT %>
  <div class="row">
    <h2>商品詳細 (管理者専用)</h2>
  </div>
  <%# ITEM DETAILS %>
  <div class="row">
    <%# LEFT --- ITEM IMAGE %>
    <div class="col-xs-5">
      <%# 写真 %>
      <%= attachment_image_tag @item, :image, :fill, 400, 300, format: 'jpeg', class: "attachment item image" %>
    </div>
    <%# RIGHT --- ITEM INFORMATION %>
    <%= form_for(@item) do |f| %>
      <div class="col-xs-5">
        <div class="row">
          <label class="control-label" for="item_name">商品名</label>
          <p><%= @item.name %></p>
        </div>
        <div class="row">
          <label class="control-label" for="item_caption">商品説明</label>
          <p><%= @item.caption %></p>
        </div>
        <div class="row">
          <label class="control-label" for="item_genre_id">ジャンル !NEED_FIX!</label>
          <p><%= @item.genre_id %></p>
        </div>
        <div class="row">
          <label class="control-label" for="item_price">税抜価格(税抜価格)</label>
          <p><%= @item.price %></p>
        </div>
        <div class="row">
          <label class="control-label" for="item_status">販売ステータス</label>
          <p><%= @item.status %></p>
        </div>
      </div>
    </div>
  <% end %>
  <%# EDIT BUTTON %>
  <div class="row">
    <%= link_to "編集する", edit_admin_item_path(@item), class:'btn-sm btn-success' %>
  </div>
</div>
</div>
